# Production Environment Configuration for Vercel
NODE_ENV=production
PORT=5000

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_in_production
SESSION_SECRET=your_session_secret_key_here_change_in_production

# CORS Origins for Production
ALLOWED_ORIGINS=https://your-domain.vercel.app,https://your-domain.com

# Performance Configuration
COMPRESSION_LEVEL=6
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring and Analytics
ENABLE_METRICS=true
LOG_LEVEL=info

# Optional: External Services (configure as needed)
# OPENAI_API_KEY=your_openai_api_key_here
# MONGODB_URI=your_mongodb_connection_string
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_app_password
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=your_twilio_phone_number
